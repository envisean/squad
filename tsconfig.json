{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@squad/*": ["packages/*/src"]
    },
    "composite": true,
    "declarationMap": true
  },
  "files": [],
  "references": [
    { "path": "packages/core" },
    { "path": "packages/agents" },
    { "path": "scripts" }
  ]
} 